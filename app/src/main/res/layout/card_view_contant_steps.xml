<?xml version="1.0" encoding="utf-8"?>
<LinearLayout android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    <androidx.cardview.widget.CardView
    android:layout_width="match_parent"
    android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="5dp"
        android:elevation="4dp"

        >

   <RelativeLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
              >

       <TextView
           android:id="@+id/num_steps"
           android:layout_width="61dp"
           android:layout_height="24dp"
           android:layout_centerVertical="true"
           android:textColor="@color/LightSteelBlue"
           android:layout_toStartOf="@+id/name_steps"
           android:layout_toLeftOf="@id/name_steps"
           android:textSize="20sp"
           />

       <TextView
           android:id="@+id/name_steps"
           android:layout_width="262dp"
           android:layout_height="28dp"
           android:layout_centerVertical="true"
           android:layout_marginStart="5dp"
           android:layout_marginEnd="19dp"
           android:layout_toStartOf="@+id/play_icon"
           android:text="Name_Steps"
           android:textSize="17sp"
           android:textStyle="bold" />

       <ImageView
           android:id="@+id/play_icon"
           android:layout_width="29dp"
           android:layout_height="34dp"
           android:layout_alignParentEnd="true"
           android:layout_centerHorizontal="true"
           android:layout_marginEnd="32dp"
           android:src="@drawable/ic_resume"


           />


        </RelativeLayout>



</androidx.cardview.widget.CardView>

</LinearLayout>