<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/LightSteelBlue"

    >
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        >



            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_margin="5dp"
                android:id="@+id/image_card_activity"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/name_Baking"
                android:layout_toRightOf="@id/image_card_activity"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="10dp"
                android:textSize="20sp"
                android:textStyle="bold"
                />



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/serving_baking"
                android:layout_toRightOf="@id/serving"
                android:layout_below="@id/name_Baking"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="10dp"
                android:textStyle="italic"

                />
             <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
                 android:id="@+id/serving"
            android:layout_toRightOf="@id/image_card_activity"
            android:layout_below="@id/name_Baking"
                 android:text="@string/Survising"
            android:layout_marginTop="13dp"
            android:layout_marginLeft="10dp"
            android:textStyle="italic"


            />




    </RelativeLayout>

    </androidx.cardview.widget.CardView>




</LinearLayout>